pipeline {
    agent any

    stages {
        stage('lint') {
             steps {
                sh './gradlew lint'
             }
        }
        stage('Build') {
             steps {
                sh './gradlew clean && rm -rf ./app/build/'
                sh './gradlew assembleDebug'
             }
        }
       stage('UnitTest') {
             steps {
                sh './gradlew test'
             }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'app/build/outputs/**/*.apk', fingerprint: true
            }
        }
    }
}